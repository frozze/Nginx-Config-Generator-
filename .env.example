# ─── NginxConfig Environment Variables ───
# Copy this file to .env.local and fill in the values

# ─── Public URL ───
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ─── Feature Flags ───
# Set to "true" to enable Pro features (requires Pro backend)
NEXT_PUBLIC_PRO_ENABLED=false

# Set to "true" to show ad slots (requires ad provider config)
NEXT_PUBLIC_ADS_ENABLED=false

# Set to "true" to enable analytics tracking
NEXT_PUBLIC_ANALYTICS_ENABLED=false

